							<option value="{$region.name}" rel="{$region.id}" {if $region.selected}selected="selected"{/if}>{$region.name}</option>
						{/foreach}
						</select>
						
						<select name="city">				
						<option value="" rel="0">请选择城市</option>
						{foreach from=$region_lv3 item=region}
							<option value="{$region.name}" rel="{$region.id}" {if $region.selected}selected="selected"{/if}>{$region.name}</option>
						{/foreach}
						</select>
