.comment_user_avatar img{ width:48px; height:48px;}
.comment_content{ float:left; width:850px; margin-left:20px; line-height:18px; font-size:12px;}
.comment_op{ float:right; font-size:12px;}
.pass_time{ color:#ccc;}
.reply_box{ display:none;}
